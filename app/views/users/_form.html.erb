<div class="text_field">
  <%= form.label :name %>
  <%= form.text_field :name %>
</div>
<div class="text_field">
  <%= form.label :email %>
  <%= form.text_field :email, :type => "email" %>
</div>
<div class="password_field">
  <%= form.label :password %>
  <%= form.password_field :password %>
</div>
<div class="select_field">
  <%= form.label :role %>
  <%= form.select :role, User::ROLES %>
</div>
